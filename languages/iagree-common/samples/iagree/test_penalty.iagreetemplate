Template S3Premium version 1.0
	Provider as Responder
	GMTZone: +1

	Metrics:
		id: integer[0..500]
		percent: integer[0..100]
		countries:  set {US, west_US, EU_Irland, Pacific_Asia, Southamerica, GovCloud_US}
		interfaceType:  set {SOAP, REST}
		objectType: integer[0..500]
		protocol:  set {HTTP, BitTorrent, HTTPS, FTP}
		rightsType:  set {read, write, delete, read_write, full}
		money: integer[0..500]
		size: integer[0..500]
		supportType:  set {Bronze, Silver, Gold, Platinum}
		Boolean:  boolean
		RangeTest: integer[-20..100]

AgreementTerms
	Service AWS-S3PremiumSupport availableAt. "http://aws.amazon.com/s3/"
		GlobalDescription
			ObjectSize: float = 7;
			Region: countries
			Interface: interfaceType
			SVN: boolean
			RRS: boolean
			TotalPrice: money = 100;
			StoragePrice: money
			DataTransferPrice: money
			StorageSize: size
			WriteRequests: integer
			ReadRequests: integer
			TransferredGB: size
			Support: supportType

	MonitorableProperties
		global:
			Availability: percent
			DataDurability: percent
			ForumAccess: boolean
			Report-an-issue: boolean
			WebTicketing: boolean
			WebSupport: boolean

		GuaranteeTerms
			G1:	Provider guarantees MUP >= 99.95;
				onlyIf (RegionUnits > 2);
				with monthly penalty
					of SCP = 10 if MUP <= 99 AND MUP < 99.95;
					of SCP = 20 if MUP < 99;
				end

CreationConstraints
	C1:	Region belongs {US, west_US, EU_Irland, Pacific_Asia, Southamerica, GovCloud_US};

EndTemplate